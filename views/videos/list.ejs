<% include ../header.ejs %>
<div id="all-videos" class="with-header">
  <div class="panel">
    <% if (videos.length) { %>
      <ul class="responsive-grid">
      <% _.each(videos, function (video) { %>
    	  <li class="poster">
          <div class="poster-innards">
            <% if (video.episode_metadata) { %>
              <a href="/videos/watch/<%= video.id %>" class="poster-link">
                <img class="video-thumbnail" src="http://thetvdb.com/banners/<%= video.episode_metadata.filename %>" alt="">
              </a>
            <% } %>
      	  	<% if (video.title) { %>
            <span class="title">
      	  		<%= video.title %>
            </span>
      	  	<% } %>
      	  	<% if (video.season && video.episode) { %>
            <span class="season">
      	  		S<%= video.season %>E<%= video.episode %>
            </span>
      	  	<% } else { %>
      				<%= video.raw_file_path %>
      	  	<% } %>
          </div>
    	  </li>
      <% }); %>
      </ul>
    <% } else { %>
      <div>No videos found.</div>
    <% } %>
  </div>
</div>
